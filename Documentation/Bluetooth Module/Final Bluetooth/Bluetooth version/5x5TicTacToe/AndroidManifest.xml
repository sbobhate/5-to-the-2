<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ec327.project.x5tictactoe"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <meta-data android:name="com.google.android.gms.games.APP_ID"
                   android:value="@string/app_id" />
        <meta-data android:name="com.google.android.gms.version"
                   android:value="@integer/google_play_services_version"/>
        
        <activity
            android:name="ec327.project.x5tictactoe.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ec327.project.x5tictactoe.Game"
            android:label="@string/title_activity_game" >
        </activity>
        <activity
            android:name="ec327.project.x5tictactoe.BluetoothClientConnection"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="ec327.project.x5tictactoe.BluetoothServerConnection"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="ec327.project.x5tictactoe.BTmenu"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>
